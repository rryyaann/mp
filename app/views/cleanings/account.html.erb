<div class="container">

<h3 class="cloudtext">Your Account&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;Welcome Back, <%= current_user.name %></h3>
<hr class="featurette-divider">

<div><button type="button" class="btn btn-default btn-lg"><%= link_to new_cleaning_path do %><span class="glyphicon glyphicon-calendar"></span>  Schedule your next cleaning<% end %></button></div>
</br>
<h4 class="cloudtext">Your most recently scheduled cleanings</h4>

<table class="table whiteback table-condensed table-bordered center">
  <tr>
      <th class="center belize">Date</th>
      <th class="center belize">Time</th>
      <th class="center belize">Cleaning Directions</th>
      <th class="center belize"></th>
  </tr>

    <% @cleanings.each do |cleaning| %>
      <tr>
        <td><% if cleaning.month == 1 %>
    <%= "January" %> 
    <% elsif cleaning.month == 2 %>
    <%= "February" %> 
    <% elsif cleaning.month == 3 %>
    <%= "March" %>  
    <% elsif cleaning.month == 4 %>
    <%= "April" %> 
    <% elsif cleaning.month == 5 %>
    <%= "May" %> 
    <% elsif cleaning.month == 6 %>
    <%= "June" %>
    <% elsif cleaning.month == 7 %>
    <%= "July" %>
    <% elsif cleaning.month == 8 %>
    <%= "August" %>
    <% elsif cleaning.month == 9 %>
    <%= "September" %>
    <% elsif cleaning.month == 10 %>
    <%= "October" %>
    <% elsif cleaning.month == 11 %>
    <%= "November" %>
    <% elsif cleaning.month == 12 %>
    <%= "December" %>
  <% end %>
  <%= cleaning.day %></td>
        <td><%= cleaning.hour %>:<% if cleaning.minute == 1 %>
    <%= "00" %> 
    <% else %>
      <%= "30" %>
    <% end %>
    <% if cleaning.ampm == 1 %>
       <%= "AM" %> 
    <% else %>
       <%= "PM" %>
    <% end %>
  </td>
        <td><%= cleaning.focus %></td>
        <td>
          <div class="btn-group">
          <button type="button" class="btn btn-default dropdown-toggle btn-sm" data-toggle="dropdown">
            Action <span class="caret"></span>
          </button>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to 'Cancel Cleaning', cleaning, method: :delete, data: { confirm: 'Are you sure? Cancellations or reschedules within 24 hours of cleaning appointment will have a fee of $ 40.00' } %></li>
          </ul>
          </div>
        </td>
      </tr>
    <% end %>
</table>

<h4 class="cloudtext">Your Info</h4>
<%= render 'pages/customerinfo' %>
</div>