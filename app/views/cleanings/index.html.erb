<div class="container">

<h1 class="cloudtext">All cleanings</h1>

<%= link_to 'New Cleaning', new_cleaning_path %>

<table class="table whiteback table-condensed table-bordered center">
  <tr>
      <th class="center">Date</th>
      <th class="center">Appointment Time</th>
      <th class="center">Hours</th>
      <th class="center">Customer Name</th>
      <th class="center">Address</th>
      <th class="center">Bedrooms</th>
      <th class="center">Cleaning Directions</th>
      <th class="center">Frequency</th>
      <<th class="center">Price</th>
      <th class="center"></th>
  </tr>

    <% @cleanings.each do |cleaning| %>
      <tr>
        <td><% if cleaning.month == 1 %>
    <%= "January" %> 
    <% elsif cleaning.month == 2 %>
    <%= "February" %> 
    <% elsif cleaning.month == 3 %>
    <%= "March" %>  
    <% elsif cleaning.month == 4 %>
    <%= "April" %> 
    <% elsif cleaning.month == 5 %>
    <%= "May" %> 
    <% elsif cleaning.month == 6 %>
    <%= "June" %>
    <% elsif cleaning.month == 7 %>
    <%= "July" %>
    <% elsif cleaning.month == 8 %>
    <%= "August" %>
    <% elsif cleaning.month == 9 %>
    <%= "September" %>
    <% elsif cleaning.month == 10 %>
    <%= "October" %>
    <% elsif cleaning.month == 11 %>
    <%= "November" %>
    <% elsif cleaning.month == 12 %>
    <%= "December" %>
  <% end %>
  <%= cleaning.day %></td>
        <td><%= cleaning.hour %>:<% if cleaning.minute == 1 %>
    <%= "00" %> 
    <% else %>
      <%= "30" %>
    <% end %>
    <% if cleaning.ampm == 1 %>
       <%= "AM" %> 
    <% else %>
       <%= "PM" %>
    <% end %>
  </td>

  <td><% if cleaning.user.sf == 1  %>
      <%= 2.5 + (cleaning.user.bedrooms - 1 + cleaning.user.bathrooms - 1) %>
      <% elsif cleaning.user.sf == 2 %>
      <%= 2.5 + (cleaning.user.bedrooms - 1 + cleaning.user.bathrooms - 1) + 0.5 %>
      <% elsif cleaning.user.sf == 3 %>
       <%= 2.5 + (cleaning.user.bedrooms - 1 + cleaning.user.bathrooms - 1) + 1.5 %>
      <% elsif cleaning.user.sf == 4 %>
       <%= 2.5 + (cleaning.user.bedrooms - 1 + cleaning.user.bathrooms - 1) + 3.5 %>
       <% elsif cleaning.user.sf == 5 %>
       <%= 2.5 + (cleaning.user.bedrooms - 1 + cleaning.user.bathrooms - 1) + 5.5 %>
       <% elsif cleaning.user.sf == 6 %>
       <%= 2.5 + (current_user.bedrooms - 1 + cleaning.user.bathrooms - 1) + 7.5 %>
      <% elsif cleaning.user.sf == 7 %>
       <%= 2.5 + (cleaning.user.bedrooms - 1 + cleaning.user.bathrooms - 1) + 8.5 %>
      <% end %> hours</td>

  <td><%= cleaning.user.name %> <%= cleaning.user.lastname %></td>
  <td><%= cleaning.user.address %>, <%= cleaning.user.city %>, <%= cleaning.user.zip %></td>
  <td><%= cleaning.user.bedrooms %>
        <td><%= cleaning.focus %></td>

        <td><% if cleaning.frequency == 1 %>
       <%= "One Time" %> 
    <% elsif cleaning.frequency == 2 %>
    <%= "Every 2 Weeks" %>
    <% elsif cleaning.frequency == 3 %>
    <%= "Every Week" %>
    <% elsif cleaning.frequency == 4 %>
    <%= "Every 3 Weeks" %>
    <% elsif cleaning.frequency == 5 %>
    <%= "Once a Month" %>
  <% end %></td>
  <td><% if cleaning.user.sf == 1  %>
      <%= 55 + (cleaning.user.bedrooms - 1 + cleaning.user.bathrooms - 1) * 10 %>
      <% elsif cleaning.user.sf == 2 %>
      <%= 55 + (cleaning.user.bedrooms - 1 + cleaning.user.bathrooms - 1) * 10 + 10 %>
      <% elsif cleaning.sf == 3 %>
      <%= 55 + (cleaning.user.bedrooms - 1 + cleaning.user.bathrooms - 1) * 10 + 30 %>
      <% elsif cleaning.user.sf == 4 %>
      <%= 55 + (cleaning.user.bedrooms - 1 + cleaning.user.bathrooms - 1) * 10 + 70 %>
       <% elsif cleaning.user.sf == 5 %>
      <%= 55 + (cleaning.user.bedrooms - 1 + cleaning.user.bathrooms - 1) * 10 + 110 %>
       <% elsif cleaning.user.sf == 6 %>
      <%= 55 + (cleaning.user.bedrooms - 1 + cleaning.user.bathrooms - 1) * 10 + 150 %>
      <% elsif cleaning.user.sf == 7 %>
      <%= 55 + (cleaning.user.bedrooms - 1 + cleaning.user.bathrooms - 1) * 10 + 190 %>
      <% end %></td>

        <td>
          <div class="btn-group">
          <button type="button" class="btn btn-info dropdown-toggle btn-sm" data-toggle="dropdown">
            Action <span class="caret"></span>
          </button>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to 'Cancel Cleaning', cleaning, method: :delete, data: { confirm: 'Are you sure? Cancellations or reschedules within 24 hours of cleaning have a fee of $ 40.00' } %></li>
            <li><%= link_to 'Edit Cleaning', edit_cleaning_path(cleaning) %></li>
          </ul>
          </div>
        </td>
      </tr>
    <% end %>
</table>

</div>
