<div class="container">

<div class="panel panel-default">
  <div class="panel-heading">
    <div class="panel-title">
      <h1 class="emerald">Edit Customer Info</h1>
    </div>
  </div>
  <div class="panel-body">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
      <%= devise_error_messages! %>

      <div class="row form-group">
       <div class="col-xs-3">
       <%= f.label :first_name %> 
       <%= f.text_field :name, class: "form-control" %>
       </div>

       <div class="col-xs-3">
        <%= f.label :last_name %> 
        <%= f.text_field :lastname, class: "form-control" %>
       </div>
      </div>

     <div class="form-group">
       <%= f.label :address %> <i> (street address to be cleaned, including apartment number)</i>
       <%= f.text_field :address, class: "form-control" %>
     </div>

     <div class="form-group">
       <%= f.label :city %>
       <%= f.text_field :city, class: "form-control" %>
     </div>

     <div class="form-group">
       <%= f.label :zip_code %>
       <%= f.text_field :zip, class: "form-control" %>
     </div>

      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: "form-control" %>
      </div>

      <div class="form-group">
       <%= f.label :phone %>
       <%= f.telephone_field :phone, class: "form-control" %>
     </div>

     <hr class="featurette-divider belize">
      <h3 class="belize">Special notes for your maid</h3>

    </br>

     <div class="form-group">
       <%= f.label :entry_and_keys_info %>
       <%= f.text_area :keys, class: "form-control" %>
     </div>

     <div class="form-group">
       <%= f.label :location_of_trash %>
       <%= f.text_area :trash, class: "form-control" %>
     </div>

     <div class="form-group">
       <%= f.label :pets %>
       <%= f.text_area :pets, class: "form-control" %>
     </div>

     <div class="form-group">
       <%= f.label :parking_info %>
       <%= f.text_area :parking, class: "form-control" %>
     </div>

     </br>
   <p class="belize">Size of home to be cleaned</p>

     <div class="form-group">
     <%= f.label :number_of_bedrooms %> 
     <%= f.select(:bedrooms, options_for_select([['Studio or 1 bedroom', 1], ['2 bedrooms', 2], ['3 bedrooms', 3], ['4 bedrooms', 4], ['5 bedrooms', 5], ['6 bedrooms', 6]]), {}, {class: "form-control"}) %>
     </div>

     <div class="form-group">
     <%= f.label :number_of_bathrooms %> 
     <%= f.select(:bathrooms, options_for_select([['0 or 1 bathroom', 1], ['2 bathrooms', 2], ['3 bathrooms', 3], ['4 bathrooms', 4], ['5 bathrooms', 5], ['6 bathrooms+', 6]]), {}, {class: "form-control"}) %>
     </div>

     <div class="form-group">
     <%= f.label :square_feet %> 
     <%= f.select(:sf, options_for_select([['Less than 500 sf', 1], ['500-1000 sf', 2], ['1000-2000 sf', 3], ['2000-3000 sf', 4], ['3000-4000 sf', 5], ['4000-5000 sf', 6], ['5000 sf+', 7]]), {}, {class: "form-control"}) %>
     </div>

    <hr class="featurette-divider belize">
    <h3 class="belize">Confirm Changes</h3>

      <div class="form-group">
        <%= f.label :password %> <i>(leave blank if you don't want to change it)</i>
        <%= f.password_field :password, class: "form-control", :autocomplete => "off" %>
      </div>

      <div class="form-group">
        <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i>
        <%= f.password_field :current_password, class: "form-control" %>
      </div>
      

      <div class="form-group">
        <%= f.submit "Update", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
  <div class="panel-footer">
    <h3>Cancel my account</h3>

    <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete, class: "btn btn-warning" %></p>

    <%= link_to "Back", :back %>
  </div>
</div>

</div>