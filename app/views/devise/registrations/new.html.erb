

<div class="panel panel-default">
  <div class="panel-heading">
    <h2 class="emerald">Sign Up Now</h2>
    <h4 class="belize">Maids will be a click away</h4>
  </div>

  <div class="panel-body">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label :name %> <i> (first and last name, example: Jane Smith)</i>
        <%= f.text_field :name, autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group">
       <%= f.label :address %> <i> (home address to be cleaned, including apartment number)</i>
       <%= f.text_field :address, class: "form-control" %>
     </div>

     <div class="form-group">
       <%= f.label :city %>
       <%= f.text_field :city, class: "form-control" %>
     </div>

     <div class="form-group">
       <%= f.label :zip_code %>
       <%= f.text_field :zip, class: "form-control" %>
     </div>

   </br>

     <div class="form-group">
       <%= f.label :number_of_bedrooms %> <i> (Please enter a number, example: "2", not "2 bedrooms")</i>
       <%= f.text_field :rooms, class: "form-control" %>
     </div>

   </br>

      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: "form-control" %>
      </div>

      <div class="form-group">
       <%= f.label :phone %>
       <%= f.telephone_field :phone, class: "form-control" %>
     </div>

      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, class: "form-control" %>
      </div>

      <hr class="featurette-divider belize">
      <h3 class="belize">Special notes for your maid</h3>

    </br>

      <div class="form-group">
       <%= f.label :entry_and_keys_info %>
       <%= f.text_area :keys, class: "form-control" %>
     </div>

     <div class="form-group">
       <%= f.label :location_of_trash %>
       <%= f.text_area :trash, class: "form-control" %>
     </div>

     <div class="form-group">
       <%= f.label :pets %>
       <%= f.text_area :pets, class: "form-control" %>
     </div>

     <div class="form-group">
       <%= f.label :parking_info %>
       <%= f.text_area :parking, class: "form-control" %>
     </div>

      <div class="form-group">
        <%= f.submit "Sign up", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>

  <div class="panel-footer">
    <%= render "devise/shared/links" %>
  </div>
</div>